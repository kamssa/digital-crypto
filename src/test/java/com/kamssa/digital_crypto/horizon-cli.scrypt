        log_msg " -> [UPDATE] $FILENAME (Backup .bak cr√©√©)"
    else
        log_msg " -> [NEW] $FILENAME (Nouvelle installation)"
    fi

    # Copie et Permissions
    cp -f "$SRC" "$FINAL_DEST"
    chown was:web "$FINAL_DEST"
    chmod "$PERMS" "$FINAL_DEST"
