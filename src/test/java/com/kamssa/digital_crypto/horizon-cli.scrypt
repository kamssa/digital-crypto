#!/bin/bash

CONFIG_FILE="/opt/horizon/var/script/certs.conf"
TRANSIT_DIR="/opt/horizon/var/transit"
SCRIPT_PATH="/opt/horizon/var/script/universal_deploy.sh"
EMAIL="abdoulaye.1.traore@externe.bnpparibas.com"
SERVER_DNS="s02v19932426.fr.net.intra" # Nom de votre serveur

# Cr√©ation transit
mkdir -p "$TRANSIT_DIR"

echo "=== DEMARRAGE DU TRAITEMENT DES CERTIFICATS ==="

# Lecture du fichier de config (saute les lignes commen√ßant par #)
grep -v '^#' "$CONFIG_FILE" | while IFS='|' read -r DNS TYPE PFX_PASS STORE_PASS KEY_PASS ALIAS_FINAL; do
    
    # Sauter les lignes vides
    [ -z "$DNS" ] && continue

    echo "----------------------------------------------------------------"
    echo "Traitement : $DNS (Type: $TYPE)"
    echo "----------------------------------------------------------------"

    # Nettoyage pr√©ventif
    rm -f "$TRANSIT_DIR/$DNS"*

    # Construction de la commande selon le type
    case "$TYPE" in
        "FRONT")
            # FRONT = Demande KDB
            CMD="/opt/horizon/bin/horizon-cli automate enroll \
            --no-interactive --automation-policy=automate-app-tls-client-server-365 --auto-renew \
            --contact-email=$EMAIL \
            --dnsnames=\"$DNS\" \
            --kdb=\"${DNS}.kdb\" --kdb-pwd=\"$PFX_PASS\" \
            --destination-folder=\"$TRANSIT_DIR\" \
            --chain-file=\"trustChain_${DNS}.pem\" \
            --script=\"$SCRIPT_PATH $TYPE $DNS $PFX_PASS - - -\""
            ;;
            
        "VAULT"|"WEBSSO")
            # VAULT/WEBSSO = Demande P12 (PFX)
            CMD="/opt/horizon/bin/horizon-cli automate enroll \
            --no-interactive --automation-policy=automate-app-tls-client-server-365 --auto-renew \
            --contact-email=$EMAIL \
            --dnsnames=\"$DNS,$SERVER_DNS\" \
            --pfx=\"${DNS}.p12\" --pfx-pwd=\"$PFX_PASS\" \
            --destination-folder=\"$TRANSIT_DIR\" \
            --chain-file=\"trustChain_${DNS}.pem\" \
            --script=\"$SCRIPT_PATH $TYPE $DNS $PFX_PASS $STORE_PASS $KEY_PASS $ALIAS_FINAL\""
            ;;
    esac

    # Ex√©cution de la commande
    echo "Lancement Horizon..."
    eval $CMD
    
    if [ $? -eq 0 ]; then
        echo "‚úÖ Succ√®s pour $DNS"
    else
        echo "‚ùå Erreur pour $DNS"
    fi
    echo ""

done

echo "=== TRAITEMENT TERMINE ==="
EOF
chmod +x /opt/horizon/var/script/launcher.sh