cat << 'EOF' > /opt/horizon/var/script/universal_deploy.sh
#!/bin/bash

# ==============================================================================
# SCRIPT DE DEPLOIEMENT UNIVERSEL
# ==============================================================================
# ARGUMENTS RECUS DU LAUNCHER :
MODE="$1"          # FRONT, VAULT, WEBSSO
CERT_NAME="$2"     # Nom du fichier (ex: certis.staging.websso)
P12_PASS="$3"      # Mot de passe transport
STORE_PASS="$4"    # Mot de passe final (JKS)
KEY_PASS="$5"      # Mot de passe cl√© priv√©e
FINAL_ALIAS="$6"   # Alias final attendu

# DOSSIERS & OUTILS
TRANSIT_DIR="/opt/horizon/var/transit"
IHS_DIR="/applis/19382-certi-00/ihs/sw-19382_certis_frontjava-prez-1-ssl/ssl"
CONFIG_DIR="/applis/19382-certi-00/config"
WAS_SECURITY="/applis/19382-certi-00/wlc/sa-19382_certis_frontjava-prez-1/servers/sa-19382_certis_frontjava-prez-1/resources/security"

SERVER_XML="/applis/19382-certi-00/wlc/sa-19382_certis_frontjava-prez-1/servers/sa-19382_certis_frontjava-prez-1/server.xml"
IHS_BIN="/apps/WebSphere/WebServer/bin/apachectl"

# D√©tection outils
if [ -f "/apps/WebSphere/WebPlugins/java/8.0/jre/bin/keytool" ]; then KEYTOOL="/apps/WebSphere/WebPlugins/java/8.0/jre/bin/keytool"; else KEYTOOL="keytool"; fi

LOG_FILE="/opt/horizon/var/deploy_master.log"
log_msg() { echo "$(date '+%Y-%m-%d %H:%M:%S') - [$MODE] $1" | tee -a "$LOG_FILE"; }

log_msg "--- D√©but traitement : $CERT_NAME ---"

# ------------------------------------------------------------------------------
# FONCTION DE COPIE SECURISEE
# ------------------------------------------------------------------------------
deploy_file() {
    SRC="$1"; DEST="$2"; PERMS="$3"
    FILENAME=$(basename "$SRC")
    TARGET="$DEST/$FILENAME"
    
    if [ ! -f "$SRC" ]; then log_msg "[ERREUR] Source absente: $FILENAME"; return 1; fi
    if [ ! -d "$DEST" ]; then mkdir -p "$DEST"; fi

    if [ -f "$TARGET" ]; then cp "$TARGET" "${TARGET}.bak"; fi # Backup
    cp -f "$SRC" "$TARGET"
    chown was:web "$TARGET"
    chmod "$PERMS" "$TARGET"
    log_msg " -> Install√© : $FILENAME ($PERMS)"
}

# ------------------------------------------------------------------------------
# LOGIQUE M√âTIER
# ------------------------------------------------------------------------------
case "$MODE" in

    "FRONT")
        # CAS FRONT : On attend un KDB g√©n√©r√© par Horizon
        # Action : Copier KDB+STH vers IHS
        deploy_file "$TRANSIT_DIR/${CERT_NAME}.kdb" "$IHS_DIR" "640"
        deploy_file "$TRANSIT_DIR/${CERT_NAME}.sth" "$IHS_DIR" "640"
        
        # Reload Apache
        if [ -f "$IHS_BIN" ]; then $IHS_BIN -k graceful; log_msg "Apache recharg√©."; fi
        ;;

    "VAULT")
        # CAS VAULT : On attend un P12 g√©n√©r√© par Horizon
        # Action : Extraire Key/Crt + Copier P12/Key/Crt vers Config
        BASE="${TRANSIT_DIR}/${CERT_NAME}"
        
        # Extraction (-legacy pour compatibilit√©)
        openssl pkcs12 -legacy -in "${BASE}.p12" -nocerts -out "${BASE}.key" -nodes -passin pass:"$P12_PASS"
        openssl pkcs12 -legacy -in "${BASE}.p12" -clcerts -nokeys -out "${BASE}.crt" -passin pass:"$P12_PASS"
        
        deploy_file "${BASE}.p12" "$CONFIG_DIR" "644"
        deploy_file "${BASE}.key" "$CONFIG_DIR" "640"
        deploy_file "${BASE}.crt" "$CONFIG_DIR" "644"
        
        # Reload Liberty
        if [ -f "$SERVER_XML" ]; then touch "$SERVER_XML"; log_msg "Liberty touch√©."; fi
        ;;

    "WEBSSO")
        # CAS WEBSSO : Le plus complexe (P12 -> JKS avec Alias/Mdp sp√©cifique)
        BASE="${TRANSIT_DIR}/${CERT_NAME}"
        rm -f "${BASE}.jks" "${BASE}.crt"
        
        log_msg "Conversion P12 vers JKS (Alias: $FINAL_ALIAS)..."
        
        # 1. Conversion
        $KEYTOOL -importkeystore \
            -srckeystore "${BASE}.p12" -srcstoretype pkcs12 -srcstorepass "$P12_PASS" \
            -destkeystore "${BASE}.jks" -deststoretype JKS -deststorepass "$STORE_PASS" \
            -srcalias "$CERT_NAME" -destalias "$FINAL_ALIAS" -noprompt
            
        if [ $? -ne 0 ]; then
             # Fallback alias "1"
             $KEYTOOL -importkeystore \
                -srckeystore "${BASE}.p12" -srcstoretype pkcs12 -srcstorepass "$P12_PASS" \
                -destkeystore "${BASE}.jks" -deststoretype JKS -deststorepass "$STORE_PASS" \
                -srcalias "1" -destalias "$FINAL_ALIAS" -noprompt
        fi
        
        # 2. Changement MDP Cl√© (KeyPass)
        if [ "$STORE_PASS" != "$KEY_PASS" ]; then
            log_msg "Changement mot de passe cl√©..."
            $KEYTOOL -keypasswd -alias "$FINAL_ALIAS" -keystore "${BASE}.jks" \
                -storepass "$STORE_PASS" -keypass "$STORE_PASS" -new "$KEY_PASS"
        fi
        
        # 3. Extraction CRT
        $KEYTOOL -exportcert -alias "$FINAL_ALIAS" -keystore "${BASE}.jks" \
            -storepass "$STORE_PASS" -file "${BASE}.crt" -rfc
            
        # 4. D√©ploiement
        deploy_file "${BASE}.jks" "$CONFIG_DIR" "644"
        deploy_file "${BASE}.crt" "$CONFIG_DIR" "644"
        
        # Reload Liberty
        if [ -f "$SERVER_XML" ]; then touch "$SERVER_XML"; log_msg "Liberty touch√©."; fi
        ;;
esac

log_msg "--- Fin Succ√®s ---"
exit 0
EOF
chmod +x /opt/horizon/var/script/universal_deploy.sh
