        openssl pkcs12 -in "$TRANSIT_DIR/${CERT_NAME}" -nocerts -out "$TRANSIT_DIR/$KEY_NAME" -nodes -passin pass:"$PASSWORD"
        openssl pkcs12 -in "$TRANSIT_DIR/${CERT_NAME}" -clcerts -nokeys -out "$TRANSIT_DIR/$CRT_NAME" -passin pass:"$PASSWORD"

        # 2. D√©ploiement vers CONFIG
        deploy_file "$TRANSIT_DIR/${CERT_NAME}" "$CONFIG_DIR" "644" # Le P12
        deploy_file "$TRANSIT_DIR/$KEY_NAME"    "$CONFIG_DIR" "644" # La Key
        deploy_file "$TRANSIT_DIR/$CRT_NAME"    "$CONFIG_DIR" "644" # Le Crt

        # 3. Reload
        touch "$SERVER_XML"
        log_msg "[RELOAD] Liberty touch√©."
        ;;

    *)
        log_msg "[ERREUR] Mode inconnu : $MODE"
        exit 1
        ;;
esac

log_msg "[SUCCES] Op√©ration termin√©e."
exit 0
