    exit 1
fi

log_msg "[INFO] Conversion en cours..."
log_msg "       Source : $SSL_DIR/$KDB_NAME"
log_msg "       Cible  : $SSL_DIR/$P12_NAME"

# --- LA COMMANDE MAGIQUE ---
