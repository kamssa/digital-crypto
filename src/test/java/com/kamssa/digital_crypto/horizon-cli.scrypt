# ==============================================================================
log_msg() { echo "$(date '+%Y-%m-%d %H:%M:%S') - $1" | tee -a "$LOG_FILE"; }

# Fonction g√©n√©rique pour copier avec Backup et Droits
deploy_file() {
    SRC="$1"
    DEST_DIR="$2"
    PERMS="$3" # Ex: 644 ou 640
    
    FILENAME=$(basename "$SRC")
    FINAL_DEST="$DEST_DIR/$FILENAME"

    if [ ! -f "$SRC" ]; then log_msg "[ERREUR] Source manquante : $FILENAME"; return 1; fi
    if [ ! -d "$DEST_DIR" ]; then log_msg "[ERREUR] Dossier cible manquant : $DEST_DIR"; return 1; fi

