        # D√©ploiement
        deploy_file "$TRANSIT_DIR/${CERT_NAME}.kdb" "$IHS_DIR" "640"
        deploy_file "$TRANSIT_DIR/${CERT_NAME}.sth" "$IHS_DIR" "640"
        
